<configuration supports_adding_forbidden="true">

  <property>
    <name>user_admin</name>
    <value>admin</value>
    <description>
      clickhouse server admin user.
    </description>
    <value-attributes>
      <type>db_user</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>user_admin_password</name>
    <value>admin</value>
    <description>
      clickhouse server admin user password.

      default user_admin_password = admin.
    </description>
    <value-attributes>
      <type>password</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>user_ck</name>
    <value>ck</value>
    <description>
      clickhouse client ck user.
    </description>
    <value-attributes>
      <type>db_user</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>user_ck_password</name>
    <value>admin</value>
    <description>
      clickhouse client ck user password.

      default user_ck_password = admin.
    </description>
    <value-attributes>
      <type>password</type>
      <editable-only-at-install>true</editable-only-at-install>
      <overridable>false</overridable>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

 <!-- clickhouse-users.xml -->
  <property>
    <name>clickhouse_users</name>
    <display-name>clickhouse-users template</display-name>
    <description>This is the ClickHouse server users config template for clickhouse-users.xml file</description>
    <value>
    {
      "yandex": {
        "profiles": {
          "default": {
            "max_memory_usage": "10000000000",
            "use_uncompressed_cache": "0",
            "load_balancing": "random"
          },
          "readonly": {
            "max_memory_usage": "10000000000",
            "use_uncompressed_cache": "0",
            "load_balancing": "random",
            "readonly": "1"
          }
        },
        "quotas": {
          "default": {
            "interval": {
              "duration": "3600",
              "queries": "0",
              "errors": "0",
              "result_rows": "0",
              "read_rows": "0",
              "execution_time": "0"
            }
          }
        },
        "users": {
          "{{user_admin}}": {
            "password_sha256_hex": "{{user_admin_password}}",
            "networks": {
              "ip": "::/0"
            },
            "profile": "default",
            "quota": "default"
          },
          "{{user_ck}}": {
            "password_sha256_hex": "{{user_ck_password}}",
            "networks": {
              "ip": "::/0"
            },
            "profile": "readonly",
            "quota": "default"
          }
        }
      }
    }
    </value>
    <value-attributes>
      <type>content</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  
</configuration>